<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Aplicaciones.Numeros_Pares"
             Title="Numeros_Pares">
    <StackLayout>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Image
                Source="four.png"
                SemanticProperties.Description="Cute dot net bot waving hi to you!"
                HeightRequest="200"
                HorizontalOptions="Center" />

            <ScrollView>
                <StackLayout x:Name="numberStackLayout">
                    <!-- Aquí se agregarán dinámicamente los números pares -->
                </StackLayout>
            </ScrollView>
            <Button Text="Da click" Clicked="OnShowNumbersClicked" BackgroundColor="{DynamicResource PrimaryColor}" TextColor="Black" />
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>